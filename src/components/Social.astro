---
const {platform, username} = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`} target="_blank">{platform}</a>

<style>
    a {
        padding: 5px 10px;
        color: white;
        background-color: hsla(300, 83%, 18%, 0.7);
        text-decoration: none;
        border-radius: 4px;
    }
    a:visited {
        background-color: hsla(300, 83%, 18%, 0.7);
    }
</style>